\setkomavar
	{firstfoot}
	{%
		\hrule%
		\vskip 2mm%
		\relax%
		\usekomafont{pageheadfoot}%
		\usekomafont{pagefoot}%
		\hbox to \useplength{firstfootwidth}
			{%
				\ifprinted%
					\ifnum\getpagerefnumber{\thisletter.lastpage}>1%
						\@duplexnotice%
					\fi%
				\fi%
				\hfil%
				\hbox
					{%
						\pagemark%
					}%
			}%
	}
\setkomavar
	{nextfoot}
	{%
		\usekomafont{pageheadfoot}%
		\usekomafont{pagefoot}%
		\hbox to \textwidth
			{%
				\ifprinted%
					\Ifthispageodd
						{%
							\ifnum\thepage<\getpagerefnumber{\thisletter.lastpage}%
								\@duplexnotice%
							\fi
						}
						{}%
				\fi%
				\hfil%
				\hbox
					{%
						\pagemark%
					}%
			}%
	}
