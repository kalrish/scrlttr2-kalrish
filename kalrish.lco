							\hrulefill
							&
							\hrulefill
							&
							\hrulefill
							\\
							Tag
							&
							Monat
							&
							Jahr
							\\
						\end{tabular}
						\hskip 3mm
						\relax
						um
						\hskip 3mm
						\relax
						\begin{tabular}[t]{ >{\centering\arraybackslash\sffamily\scriptsize} p{13mm} >{\centering\arraybackslash\sffamily\scriptsize} p{13mm} }
							\hrulefill
							&
							\hrulefill
							\\
							Stunde
							&
							Minuten
							\\
						\end{tabular}
						\hskip 3mm
						\relax
