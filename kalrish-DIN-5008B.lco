\newif\ifextrareferences
\newcommand
	{\@enableExtraReferences}
	[1]
	{\extrareferencestrue}
\newcommand
	{\@typesetreference}
	[1]
	{%
		\usekomavar*{#1}%
		&%
		\usekomavar{#1}%
		\\%
	}
\let\@extrareferences\@empty
\newcommand
	{\AddReference}
	[3]
	[]
	{
		\g@addto@macro
			{\@extrareferences}
			{%
				#2%
				&%
				#1%
				#3%
				\\%
			}
		\setkomavar
			{references}
			{\@extrareferences}
	}

